<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_luxa"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            app:srcCompat="@drawable/luxa" />

        <TextView
            android:id="@+id/name_luxa"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:text="Xe Luxury A" />

        <TextView
            android:id="@+id/price_luxa"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:text="1 tỷ 2" />

        <TextView
            android:id="@+id/des_luxa"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="2dp"
            android:text="Xe sử dụng công nghệ cũ của hãng xe BMW, là mẫu xe thuộc phân khúc sedan cỡ E nhưng giá bán tầm trung" />

        <ImageButton
            android:id="@+id/btnadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@android:drawable/ic_input_add" />
    </LinearLayout>
</androidx.cardview.widget.CardView>